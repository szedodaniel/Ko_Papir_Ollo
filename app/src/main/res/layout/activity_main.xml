<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:id="@+id/Layout_l"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A gép választása!"
            android:textSize="25dp"

            />

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/Image_View_Gep"


            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A te választásod!"
            android:textSize="25dp"

            />
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/Image_View_Mine"




            />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Eredmény: Te: 0 Gép: 0"
            android:textSize="25dp"
            android:id="@+id/Text_View_Eredmeny"
            android:layout_centerHorizontal="true"
            />



    </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kő"
        android:textSize="20dp"
        android:id="@+id/Button_ko"
        android:layout_toLeftOf="@id/Button_papir"
        android:layout_alignParentBottom="true"


        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Papír"
        android:textSize="20dp"
        android:id="@+id/Button_papir"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"

        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Olló"
        android:textSize="20dp"
        android:id="@+id/Button_ollo"
        android:layout_toRightOf="@id/Button_papir"
        android:layout_alignParentBottom="true"

        />

</RelativeLayout>